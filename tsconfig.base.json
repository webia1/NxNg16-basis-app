{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-basis-app-workspace/shared-ui": [
        "libs/shared/ui/src/index.ts"
      ],
      "@angular-basis-app-workspace/shared-formly": [
        "libs/shared/formly/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
